@model Aplication.VeiwModels.Genero.GeneroViewModel

@{
    ViewData["Title"] = "Eliminar Género";
}

<div class="container">
    <h2>Eliminar Género</h2>
    <p>¿Estás seguro de que deseas eliminar el género <strong>@Model.NombreGenero</strong>?</p>

    <form asp-action="DeleteGenero" asp-controller="Genero" method="post">
        
        <input type="hidden" asp-for="IdGenero" />

        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="ListGenero" asp-controller="Genero" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
